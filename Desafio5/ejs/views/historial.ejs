<%- include inicio.ejs %>
<% const areProducts = products.length > 0; %>
<% if(areProducts){ %>
<table class="table">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Imagen</th>
    </tr>
    </thead>
    <tbody>
    <% for (const product of products) {%>
    <tr>
        <th scope="row"><%=product.id%></th>
        <td><%=product.title%></td>
        <td><%=product.price%></td>
        <td>
            <img src=<%=product.thumbnail%> style="height: 40px; width: 40px">
        </td>
    </tr>
    <%};%>
    </tbody>
</table>
<% } else { %>
    <h3>No hay datos</h3>
<% } %>